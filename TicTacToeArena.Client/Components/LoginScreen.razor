    }

        .logo-section h1 {
            font-size: 3rem;
            margin: 0;
            background: linear-gradient(90deg, #22d3ee, #a78bfa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 800;
        }

        .logo-section p {
            margin-top: 0.5rem;
            color: #cbd5e1;
            font-weight: 500;
        }

    /* Login Box */
    .login-box {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        padding: 2rem;
        border-radius: 16px;
