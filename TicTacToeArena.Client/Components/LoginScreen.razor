<div class="login-container">
    <div class="logo-section">
        <h1>TicTacToe Arena</h1>
        <p>Real-time multiplayer battles</p>
    </div>

    <div class="login-box">
        <h2>Enter Your Name</h2>
        <input @bind="playerName"
               @bind:event="oninput"
               placeholder="Your name..."
               maxlength="20"
               @onkeypress="HandleKeyPress" />
        <button @onclick="Login" disabled="@(!CanLogin)">
            PLAY NOW
        </button>
    </div>

    <!-- Floating X and O symbols -->
    <div class="floating-symbols">
        <span class="symbol x">✕</span>
        <span class="symbol o">◯</span>
        <span class="symbol x">✕</span>
        <span class="symbol o">◯</span>
        <span class="symbol x">✕</span>
    </div>
</div>

<style>
    /* Body & Background */
    body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto';
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #1e1b4b, #312e81, #4c1d95);
        position: relative;
        color: white;
        overflow: hidden;
    }

        /* Moving TicTacToe grid overlay */
        body::before {
            content: "";
            position: absolute;
            inset: 0;
            background-image: linear-gradient(rgba(255,255,255,0.05) 2px, transparent 2px), linear-gradient(90deg, rgba(255,255,255,0.05) 2px, transparent 2px);
            background-size: 120px 120px;
            z-index: 0;
            animation: moveGrid 20s linear infinite;
        }

    /* Floating X and O symbols */
    .floating-symbols {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
    }

        .floating-symbols .symbol {
            position: absolute;
            font-size: 3rem;
            font-weight: 900;
            opacity: 0.15;
            animation: floatSymbol linear infinite;
        }

            .floating-symbols .symbol.x {
                color: #3b82f6;
            }

            .floating-symbols .symbol.o {
                color: #ec4899;
            }

            .floating-symbols .symbol:nth-child(1) {
                top: 10%;
                left: 5%;
                animation-duration: 15s;
            }

            .floating-symbols .symbol:nth-child(2) {
                top: 20%;
                left: 70%;
                animation-duration: 18s;
            }

            .floating-symbols .symbol:nth-child(3) {
                top: 60%;
                left: 20%;
                animation-duration: 12s;
            }

            .floating-symbols .symbol:nth-child(4) {
                top: 80%;
                left: 50%;
                animation-duration: 20s;
            }

            .floating-symbols .symbol:nth-child(5) {
                top: 40%;
                left: 80%;
                animation-duration: 22s;
            }

    @@keyframes floatSymbol {
        0%

    {
        transform: translateY(0) rotate(0deg);
        opacity: 0.15;
    }

    50% {
        transform: translateY(-50px) rotate(15deg);
        opacity: 0.25;
    }

    100% {
        transform: translateY(0) rotate(0deg);
