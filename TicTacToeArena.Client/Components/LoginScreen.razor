    }

    40% {
        transform: translateY(-15px);
    }

    60% {
        transform: translateY(-7px);
    }

    }

    @@keyframes bounceIn {
        0%

    {
        opacity: 0;
        transform: scale(0.8);
    }

    60% {
        opacity: 1;
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    @@keyframes moveGrid {
        from

    {
        background-position: 0 0, 0 0;
    }

    to {
        background-position: 120px 120px, 120px 120px;
    }

    }
</style>


@code {
    private string playerName = "";

    [Parameter] public EventCallback<string> OnLogin { get; set; }

    private bool CanLogin => !string.IsNullOrWhiteSpace(playerName) && playerName.Length >= 2;

    private async Task Login()
    {
        if (CanLogin)
            await OnLogin.InvokeAsync(playerName.Trim());
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && CanLogin)
            await Login();
    }
}