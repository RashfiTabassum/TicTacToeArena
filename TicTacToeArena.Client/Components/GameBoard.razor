@using TicTacToeArena.Shared.Models
@implements IDisposable

@if (Session == null || CurrentPlayer == null)
{
    <div class="loading">
        <p>Loading game...</p>
    </div>
    return;
}

@if (Session.Host == null)
{
    <div class="loading">
        <p>Waiting for game to start...</p>
    </div>
    return;
}

<div class="game-container">
    <div class="game-header">
        <button class="btn-leave" @onclick="HandleLeave">← Leave Game</button>
        <h3>@Session.Name</h3>
    </div>

    <div class="game-info">
        <div class="player-info">
            <div class="player @(IsHost ? "active" : "")">
                <span class="player-name">@Session.Host?.Name</span>
                <span class="symbol x">X</span>
                @if (IsHost)
                {
                    <span class="you-badge">YOU</span>
                }
            </div>
            <div class="vs">VS</div>
            <div class="player @(!IsHost ? "active" : "")">
                <span class="player-name">@(Session.Guest?.Name ?? "Waiting...")</span>
                <span class="symbol o">O</span>
                @if (!IsHost && Session.Guest != null)
                {
                    <span class="you-badge">YOU</span>
                }
            </div>
        </div>

        <p class="turn-indicator @(IsMyTurn ? "my-turn" : "")">
            @if (Session.Guest == null)
            {
                <span>⏳ Waiting for opponent to join...</span>
            }
            else if (IsMyTurn)
            {
                <span>🎯 Your turn!</span>
            }
            else
            {
                <span>⏳ Opponent's turn...</span>
            }
        </p>
    </div>

    <div class="board">
        @for (int i = 0; i < 9; i++)
        {
            var pos = i;
            <div class="cell @GetCellClass(pos) @(IsMyTurn ? "" : "disabled")" @onclick="() => MakeMove(pos)">
                @GetCellContent(pos)
            </div>

        }
    </div>

    @if (!string.IsNullOrEmpty(GameResult))
    {
        <div class="result-overlay">
            <div class="result-message">
                <h2>@GameResult</h2>
                <button @onclick="HandleLeave">Back to Lobby</button>
            </div>
        </div>
    }
</div>

