        from

    {
        box-shadow: 0 0 10px #22d3ee, 0 0 20px #22d3ee, 0 0 30px #22d3ee, 0 0 40px rgba(34,211,238,0.3);
    }

    to {
        box-shadow: 0 0 15px #22d3ee, 0 0 25px #22d3ee, 0 0 35px #22d3ee, 0 0 50px rgba(34,211,238,0.5);
    }

    }
</style>

@code {
    [Parameter]
    public GameSession Session { get; set; } = default!;

    [Parameter]
    public Player CurrentPlayer { get; set; } = default!;

    [Parameter]
    public EventCallback<int> OnMove { get; set; }

    [Parameter]
    public EventCallback OnLeave { get; set; }

    [Parameter]
    public string? GameResult { get; set; }

    [Inject]
    public GameService GameService { get; set; } = default!;

    private bool IsHost => Session?.Host?.Id == CurrentPlayer?.Id;
    private bool IsMyTurn => GameService.CurrentSession?.CurrentTurn == CurrentPlayer?.Id;

    protected override void OnInitialized()
    {
        GameService.OnMoveMade += HandleMoveMade;
    }

    private void HandleMoveMade(int position, string playerId, CellState symbol)
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task MakeMove(int position)
    {
        if (!IsMyTurn || GameService.Board[position] != CellState.Empty) return;
        await OnMove.InvokeAsync(position);
    }

    private async Task HandleLeave()
    {
        await OnLeave.InvokeAsync();
    }

    private string GetCellClass(int pos)
    {
        return GameService.Board[pos] switch
        {
            CellState.X => "occupied x",
            CellState.O => "occupied o",
            _ => ""
        };
    }

    private string GetCellContent(int pos) => GameService.Board[pos] switch
    {
        CellState.X => "✕",
        CellState.O => "◯",
        _ => ""
    };

    public void Dispose()
    {
        GameService.OnMoveMade -= HandleMoveMade;
    }
}